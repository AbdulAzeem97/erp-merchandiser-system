# Docker Environment Configuration for ERP Merchandiser System

# Database Configuration - PostgreSQL
DB_HOST=postgres
DB_PORT=5432
DB_NAME=erp_merchandiser
DB_USER=erp_user
DB_PASSWORD=DevPassword123!

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-docker

# Server Configuration
PORT=5001
NODE_ENV=production
FRONTEND_URL=http://localhost:8080

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=/app/server/uploads

# Email Configuration (for future use)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Docker specific settings
POSTGRES_DB=erp_merchandiser
POSTGRES_USER=erp_user
POSTGRES_PASSWORD=DevPassword123!

# Health check settings
HEALTH_CHECK_INTERVAL=30s
HEALTH_CHECK_TIMEOUT=10s
HEALTH_CHECK_RETRIES=3