# ===================================================================
# Docker Environment Configuration
# ===================================================================
# This file contains all environment variables for Docker deployment
# Copy this to .env when running with Docker: cp env.docker.example .env
# ===================================================================

# ===================================================================
# DATABASE CONFIGURATION
# ===================================================================
DB_HOST=postgres
DB_PORT=5432
DB_NAME=erp_merchandiser
DB_USER=postgres
DB_PASSWORD=erp_secure_password_2024

# ===================================================================
# SERVER CONFIGURATION
# ===================================================================
PORT=5001
NODE_ENV=production

# ===================================================================
# JWT CONFIGURATION (CHANGE IN PRODUCTION!)
# ===================================================================
JWT_SECRET=erp_jwt_secret_key_change_in_production_2024_secure_random_string_minimum_64_characters
JWT_EXPIRES_IN=7d

# ===================================================================
# CORS CONFIGURATION
# ===================================================================
FRONTEND_URL=http://localhost:8080
ALLOWED_ORIGINS=http://localhost:8080,http://localhost:3000,http://localhost:5173

# ===================================================================
# FILE UPLOAD CONFIGURATION
# ===================================================================
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760

# ===================================================================
# LOGGING CONFIGURATION
# ===================================================================
LOG_LEVEL=info
LOG_DIR=./logs

# ===================================================================
# SOCKET.IO CONFIGURATION
# ===================================================================
WS_PATH=/socket.io
WS_CORS_ORIGIN=http://localhost:8080

# ===================================================================
# SESSION CONFIGURATION
# ===================================================================
SESSION_SECRET=erp_session_secret_change_in_production

# ===================================================================
# EMAIL CONFIGURATION (Optional - for notifications)
# ===================================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_FROM=noreply@horizonsourcing.com

# ===================================================================
# FRONTEND CONFIGURATION
# ===================================================================
VITE_API_URL=http://localhost:5001
VITE_WS_URL=ws://localhost:5001

# ===================================================================
# IMPORTANT SECURITY NOTES:
# ===================================================================
# 1. Change JWT_SECRET to a strong random string (min 64 characters)
# 2. Change DB_PASSWORD to a strong password
# 3. Never commit this file with real credentials to git
# 4. Use docker secrets or environment variables in production
# 5. Enable SSL/TLS for production deployments
# ===================================================================

