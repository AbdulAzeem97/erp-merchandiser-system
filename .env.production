# Production Environment Configuration for ERP Merchandiser System
# Copy this to .env and update the values for your production environment

# Database Configuration
POSTGRES_PASSWORD=erp_secure_2024!
POSTGRES_PORT=5432
DATABASE_URL=postgresql://erp_admin:erp_secure_2024!@localhost:5432/erp_merchandiser

# Redis Configuration
REDIS_PASSWORD=redis_secure_2024!
REDIS_PORT=6379
REDIS_URL=redis://:redis_secure_2024!@localhost:6379

# Application Configuration
NODE_ENV=production
JWT_SECRET=your_super_secure_jwt_secret_key_2024_change_this_in_production
CORS_ORIGIN=http://localhost:3000

# Port Configuration
BACKEND_PORT=5001
FRONTEND_PORT=3000
PRISMA_STUDIO_PORT=5555

# Web Server Configuration
HTTP_PORT=80
HTTPS_PORT=443

# Logging
LOG_LEVEL=info
LOG_DIR=./logs

# File Upload Configuration
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760

# Session Configuration
SESSION_SECRET=your_session_secret_key_2024_change_this_in_production
SESSION_TIMEOUT=3600000

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password

# Backup Configuration
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30